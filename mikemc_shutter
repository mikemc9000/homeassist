#testi4
blueprint:
  name: Shutter Control with Buttons and Scheduled Automation
  description: Control shutters with a button action entity. Pressing the same button again stops the shutter. The shutter also goes up at 17:00 and down at 09:00 automatically.
  domain: automation
  input:
    button_action:
      name: Button Action Entity
      description: The action entity from the button (e.g., Hue Dimmer Switch)
      selector:
        entity:
          domain: sensor
    shutter:
      name: Shutter
      description: The shutter to control
      selector:
        entity:
          domain: cover

trigger:
  - platform: state
    entity_id: !input button_action
  - platform: time
    at: '17:00:00'
  - platform: time
    at: '09:00:00'

action:
  - choose:
      - conditions:
          - condition: state
            entity_id: !input button_action
            state: 'button_1_press'
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'opening'
                sequence:
                  - service: cover.stop_cover
                    target:
                      entity_id: !input shutter
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'closed'
                sequence:
                  - service: cover.open_cover
                    target:
                      entity_id: !input shutter
              - conditions: []
                sequence:
                  - service: cover.open_cover
                    target:
                      entity_id: !input shutter
      - conditions:
          - condition: state
            entity_id: !input button_action
            state: 'button_2_press'
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'closing'
                sequence:
                  - service: cover.stop_cover
                    target:
                      entity_id: !input shutter
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'open'
                sequence:
                  - service: cover.close_cover
                    target:
                      entity_id: !input shutter
              - conditions: []
                sequence:
                  - service: cover.close_cover
                    target:
                      entity_id: !input shutter
      - conditions:
          - condition: time
            after: '17:00:00'
        sequence:
          - service: cover.open_cover
            target:
              entity_id: !input shutter
      - conditions:
          - condition: time
            after: '09:00:00'
        sequence:
          - service: cover.close_cover
            target:
              entity_id: !input shutter
