blueprint:
  name: Shutter Control with Specific Buttons and Scheduled Automation
  description: Control shutters with specific buttons of a Hue Dimmer Switch. Pressing the same button again stops the shutter. The shutter also goes up at 17:00 and down at 09:00 automatically.
  domain: automation
  input:
    button_up:
      name: Up Button Action
      description: The action triggered by the up button (e.g., button_1_press)
      selector:
        text:
    button_down:
      name: Down Button Action
      description: The action triggered by the down button (e.g., button_2_press)
      selector:
        text:
    button_action:
      name: Button Action Entity
      description: The action entity from the button (e.g., Hue Dimmer Switch)
      selector:
        entity:
          domain: sensor
    shutter:
      name: Shutter
      description: The shutter to control
      selector:
        entity:
          domain: cover

trigger:
  - platform: state
    entity_id: !input button_action
  - platform: time
    at: '17:00:00'
  - platform: time
    at: '09:00:00'

action:
  - choose:
      - conditions:
          - condition: template
            value_template: "{{ trigger.to_state.state == (input.button_up) }}"
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'opening'
                sequence:
                  - service: cover.stop_cover
                    target:
                      entity_id: !input shutter
              default:
                  - service: cover.open_cover
                    target:
                      entity_id: !input shutter
      - conditions:
          - condition: template
            value_template: "{{ trigger.to_state.state == (input.button_down) }}"
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input shutter
                    state: 'closing'
                sequence:
                  - service: cover.stop_cover
                    target:
                      entity_id: !input shutter
              default:
                  - service: cover.close_cover
                    target:
                      entity_id: !input shutter
      - conditions:
          - condition: time
            at: '17:00:00'
        sequence:
          - service: cover.open_cover
            target:
              entity_id: !input shutter
      - conditions:
          - condition: time
            at: '09:00:00'
        sequence:
          - service: cover.close_cover
            target:
              entity_id: !input shutter
